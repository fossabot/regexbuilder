{
  "name": "regexbuilder",
  "version": "1.0.0",
  "author": {
    "name": "Tilmann Meyer",
    "email": "allescrafterx@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NieLeben/regexbuilder"
  },
  "bugs": {
    "url": "https://github.com/NieLeben/regexbuilder/issues"
  },
  "main": "src/pages/index.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "now-build": "next build",
    "clean": "git clean -d -f",
    "lint-staged": "lint-staged",
    "lint": "eslint --ignore-path .gitignore --fix --ext .js,.jsx ./",
    "storybook": "yarn run prebuild:storybook && start-storybook -p 6006",
    "prebuild:storybook": "yarn run test:generate-output",
    "build-storybook": "build-storybook",
    "test": "jest --setupFiles dotenv/config",
    "test:coverage": "jest --coverage --setupFiles dotenv/config && cat ./coverage/lcov.info | codacy-coverage",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json --setupFiles dotenv/config || true",
    "release": "semantic-release"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.jsx": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "rootDir": "./",
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "verbose": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "now -t $NOW_TOKEN --target production"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-source-maps": "^0.0.3",
    "core-js": "3",
    "next": "8.0.4",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-a11y": "^5.0.6",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-jest": "^5.0.6",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addon-storysource": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "^1.3.1",
    "install-peers": "1.0.3",
    "jest": "^24.7.1",
    "lint-staged": "8.1.5",
    "preact": "8.4.2",
    "prettier": "1.17.0",
    "react-scripts": "^2.1.8",
    "react-test-renderer": "^16.8.6",
    "webpack": "4.30.0"
  },
  "optionalDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "codacy-coverage": "^3.4.0",
    "semantic-release": "^15.13.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
